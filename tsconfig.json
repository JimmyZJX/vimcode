{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "outDir": "dist",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUncheckedSideEffectImports": true,
        "allowUnreachableCode": false,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}